
{{#each events}}
<div class="is-four-fifths">
  <div class="card">
    <div class="card-image">
      <figure class="image is-4by3">
        <img src="{{imgURL}}" alt="Placeholder image">
      </figure>
    </div>
    <div class="card-content">
      <div class="media">
        <div class="media-left">
        </div>
        <div class="media-content">
          <p class="title is-4">{{theme}}</p>
          <p class="title is-4">{{desctription}}</p>
          <p class="subtitle is-6">{{descriptionDate}}</p>
        </div>
      </div>
    </div>
  </div>
  <button class="primary">Записаться</button>
</div>
{{/each}}
