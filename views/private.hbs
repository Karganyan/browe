<div class="columns">
  <div class="column">
    <div class="privateEvent">
      {{!-- <button class="button is-light events" data-userid={{user.id}} data-item="events">Мои мероприятия</button>
      --}}
      <button class="button is-light profile" data-userid={{user.id}} data-editprofile="editprofile">Редактировать
        профиль</button>
    </div>

    {{#each userEvents}}
    <div class="is-four-fifths">
      <div class="card">
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="{{imgURL}}" alt="Placeholder image">
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-left">
            </div>
            <div class="media-content">
              <p class="title is-4">{{this.theme}}</p>
              <p class="title is-4">{{this.desctription}}</p>
              <p class="subtitle is-6">{{this.descriptionDate}}</p>
              <p class="urlChat is-6">{{this.urlChat}}</p>
              <a href="{{this.urlChat}}"><img src="/Telegram-icon.png" alt="telegram-icon"></a>
            </div>
          </div>
          <button class="btnforevent button is-light" data-eventid={{this._id}} data-userid={{../user.id}}
            data-userevents={{../user.events}}>Записаться на
            мероприятие</button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
